<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>
<p>
  <strong>Attachments library:</strong>
  <%if @user.attachments.presence%> 
  <table class="table table-stripped table-condensed">
  <thead>
    <tr>
      <th>Album</th>
      <th>Description</th>
      <th>Images</th>

      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.attachments.each do |attachment| %>
      <tr>
        <td><%= link_to "#{attachment.title}", attachment %></td>
        <td><%= attachment.description %></td>
        <td colspan="" rowspan="" headers=""> <%=attachment.images.length%></td>
        <td>
        <%= link_to attachment , class:'btn btn-success btn-xs ' do%><i class="glyphicon glyphicon-eye-open"></i><% end %>
        <%= link_to edit_attachment_path(attachment) , class:'btn btn-warning btn-xs' do%><i class="glyphicon glyphicon-pencil"></i><% end %> 
        <%= link_to attachment, method: :delete, data: { confirm: 'Are you sure?' } , class:'btn btn-danger btn-xs' do%><i class="glyphicon glyphicon-trash"></i><% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
  <%end%>
</p>

 <%= link_to 'New Attachment', new_attachment_path({uid: @user.id}), class:'btn btn-info  col-xs-3' %>
<%= link_to 'Edit', edit_user_path(@user), class:'btn btn-info col-xs-offset-1 col-xs-3' %>
<%= link_to 'Back', users_path, class:'btn btn-info col-xs-offset-1 col-xs-3' %>
