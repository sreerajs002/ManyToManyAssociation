<p id="notice"><%= notice %></p>

<h1>Listing Attachments</h1>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>user</th>
      <th>Album</th>
      <th>Description</th>
      <th>Images</th>
      <th colspan=""></th>
    </tr>
  </thead>

  <tbody>
    <% @attachments.each do |attachment| %>
      <tr>
        <td><%= attachment.user.name %></td>
        <td><a href="#"><%= link_to "#{attachment.title}", attachment %></a></td>
        <td><%= attachment.description %></td>
        <td><%= attachment.images.length %></td>
        <td><%= link_to attachment, method: :delete, data: { confirm: 'Are you sure?' } , class:'btn btn-danger btn-xs' do%><i class="glyphicon glyphicon-trash"></i><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

